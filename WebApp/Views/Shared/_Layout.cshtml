<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - WebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/WebApp.styles.css" asp-append-version="true"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow mb-3 p-3">
        <div class="container-fluid justify-content-between">
            <div>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <div class="navbar-nav">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-center align-items-center">
                <a class="text-black text-decoration-none fs-2" asp-area="" asp-controller="Home" asp-action="Index">SkinAlerty</a>
            </div>
            <div class="d-flex justify-content-end gap-3">
                <button type="button" class="btn btn-dark p-2">Download</button>
                @if (!User.Identity!.IsAuthenticated)
                {
                    <a asp-area="" asp-controller="User" asp-action="Login" class="btn btn-dark p-2">Login</a>
                    <a asp-area="" asp-controller="User" asp-action="Register" class="btn btn-dark p-2">Register</a>
                }
                @if (User.Identity!.IsAuthenticated)
                {
                    <a asp-area="" asp-controller="User" asp-action="Settings" class="btn btn-dark p-2">Settings</a>
                    <form asp-area="" asp-controller="User" asp-action="Logout" method="post" class="ml-2">
                        <button type="submit" class="btn btn-dark p-2">Logout</button>
                    </form>
                }
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2024 - WebApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", false)
</body>
</html>