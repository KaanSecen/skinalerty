@model WebApp.Models.UserViewModel

<form asp-action="Register" asp-controller="User" method="post">
    <input asp-for="Name" placeholder="Name" class="form-control" />
    <input asp-for="Email" type="email" placeholder="Email" class="form-control"  />
    <input asp-for="Password" placeholder="Password" type="password" class="form-control"  />
    <button type="submit" class="btn btn-primary">Register</button>
</form>

@if (ViewBag.HasError == true)
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}